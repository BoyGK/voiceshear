    <com.roughike.bottombar.BottomBar
        android:id="@+id/select_top"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="#31adff"
        app:bb_inActiveTabColor="#ffffff"
        app:bb_showShadow="false"
        app:bb_activeTabColor="#fd4c43"
        app:bb_tabXmlResource="@xml/select_top_button" />

    <TextView android:layout_width="match_parent"
              android:background="@drawable/buttom_box"
              android:layout_height="3dp"/>

    <android.support.v4.view.ViewPager
        android:background="#ffffff"
            android:id="@+id/top_main_viewPager"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
