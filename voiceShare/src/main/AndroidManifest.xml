        <activity android:name=".ui.RegisterActivity2"/>
        <activity android:name=".ui.MainActivity"/>
        <activity android:name=".ui.MainSearchActivity"/>
        <activity android:name=".ui.MainVideoActivity"/>
        <activity android:name=".ui.CollectsSearchActivity"/>
        <activity android:name=".ui.UserActivity"/>
        <activity android:name=".ui.self.AboutActivity"/>
        <activity android:name=".ui.self.InformationActivity"/>
        <activity android:name=".ui.self.MysteriousActivity"/>
        <activity android:name=".ui.self.NewsBackActivity"/>
        <activity android:name=".ui.self.SettingActivity"/>
